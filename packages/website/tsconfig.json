{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["DOM", "ES2017", "WebWorker"],
    "module": "ESNext",
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"]
    }
  },
  "include": ["src/**/*", "src/node_modules/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "static/*"]
}
