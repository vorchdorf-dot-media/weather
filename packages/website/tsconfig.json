{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "baseUrl": "./",
    "lib": ["DOM", "ES2017", "WebWorker"],
    "module": "ESNext",
    "paths": {
      "assets/*": ["src/assets/*"],
      "components/*": ["src/components/*"],
      "routes/*": ["src/routes/*"],
      "utils/*": ["src/utils/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/node_modules/**/*"],
  "exclude": ["node_modules/*", "__sapper__/*", "static/*"]
}
